<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] [%thread/%level] [%logger{36}] %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root logger level (can be overridden by POORCRAFT_LOG_LEVEL env var) -->
    <root level="${poorcraft.log.level:-INFO}">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- Verbose logging for our code -->
    <logger name="com.poorcraft.ultra" level="DEBUG" />
    
    <!-- Reduce jMonkeyEngine verbosity -->
    <logger name="com.jme3" level="INFO" />
    
    <!-- Reduce LWJGL verbosity -->
    <logger name="org.lwjgl" level="WARN" />
</configuration>
